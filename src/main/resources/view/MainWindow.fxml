<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="dusk.gui.MainWindow"
            maxHeight="-Infinity"
            maxWidth="-Infinity"
            minHeight="-Infinity"
            minWidth="-Infinity"
            prefHeight="600.0"
            prefWidth="400.0"
            style="-fx-background-color: #f0f0f0;">
    <TextField fx:id="userInput"
               layoutY="558.0"
               prefHeight="41.0"
               prefWidth="299.0"
               onAction="#handleUserInput"
               style="-fx-background-radius: 20; -fx-border-radius: 20;"
               AnchorPane.bottomAnchor="10.0"
               AnchorPane.leftAnchor="10.0"
               AnchorPane.rightAnchor="96.0"/>
    <Button fx:id="sendButton"
            layoutX="324.0"
            layoutY="558.0"
            prefHeight="41.0"
            prefWidth="76.0"
            text="Send"
            mnemonicParsing="false"
            onAction="#handleUserInput"
            style="-fx-background-radius: 20; -fx-background-color: #4a90e2; -fx-text-fill: white;"
            AnchorPane.bottomAnchor="10.0"
            AnchorPane.rightAnchor="10.0"/>
    <ScrollPane fx:id="scrollPane"
                prefHeight="557.0"
                prefWidth="400.0"
                hbarPolicy="NEVER"
                hvalue="1.0"
                vvalue="1.0"
                style="-fx-background: #f0f0f0; -fx-border-color: transparent;"
                AnchorPane.topAnchor="0.0"
                AnchorPane.leftAnchor="0.0"
                AnchorPane.rightAnchor="0.0"
                AnchorPane.bottomAnchor="61.0">
        <VBox fx:id="dialogContainer"
              prefHeight="502.0"
              prefWidth="388.0"
              spacing="10"
              style="-fx-padding: 10;"/>
    </ScrollPane>
</AnchorPane>
