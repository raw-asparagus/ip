<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>

<fx:root alignment="TOP_RIGHT" prefWidth="400.0" type="javafx.scene.layout.HBox" xmlns="http://javafx.com/javafx/17"
         xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets bottom="15.0" left="5.0" right="5.0" top="15.0"/>
    </padding>
    <Label fx:id="dialog"
           style="-fx-background-color: #fff3cd; -fx-background-radius: 10; -fx-padding: 10; -fx-text-fill: #856404; -fx-font-family: 'System'; -fx-wrap-text: true"
           wrapText="true" minHeight="-Infinity"/>
    <ImageView fx:id="displayPicture" fitHeight="99.0" fitWidth="99.0" pickOnBounds="true" preserveRatio="true">
        <HBox.margin>
            <Insets left="10.0"/>
        </HBox.margin>
    </ImageView>
</fx:root>
